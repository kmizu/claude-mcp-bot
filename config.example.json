{
  "mcpServers": {
    "usb-webcam": {
      "command": "uv",
      "args": ["run", "--directory", "/path/to/usb-webcam-mcp", "usb-webcam-mcp"]
    },
    "system-temperature": {
      "command": "uv",
      "args": ["run", "--directory", "/path/to/system-temperature-mcp", "system-temperature-mcp"]
    }
  },
  "claude": {
    "model": "claude-sonnet-4-20250514",
    "system_prompt_file": "CLAUDE.md"
  },
  "bot": {
    "autonomous_interval": 30,
    "memory_path": "memories.json",
    "desire_path": "desires.json",
    "self_path": "self.json"
  },
  "web": {
    "host": "0.0.0.0",
    "port": 8000,
    "autonomous_min_interval_seconds": 3,
    "autonomous_timezone": "Asia/Tokyo",
    "reply_max_chars": 260,
    "reply_max_sentences": 3,
    "autonomous_compaction_threshold": 80,
    "autonomous_compaction_target_messages": 40,
    "max_conversation_state_bytes": 140000,
    "conversation_store": {
      "backend": "memory"
    }
  },
  "tts": {
    "enabled": true,
    "voice_id": "your-elevenlabs-voice-id",
    "model_id": "eleven_multilingual_v2",
    "output_format": "mp3_44100_128",
    "timeout_seconds": 30
  }
}
